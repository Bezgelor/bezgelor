<Layouts.gaming flash={@flash} current_account={@current_account}>
  <!-- ============================================
       HERO SECTION
       ============================================ -->
  <section class="hero-gaming gaming-bg-hero">
    <!-- Animated background layers -->
    <div class="gaming-starfield"></div>
    <div class="gaming-mesh"></div>
    
<!-- Floating parallax elements -->
    <div class="hero-float hero-float-1"></div>
    <div class="hero-float hero-float-2"></div>
    <div class="hero-float hero-float-3"></div>
    
<!-- Hero content -->
    <div class="hero-gaming-content">
      <h1 class="hero-gaming-title">
        <span class="text-white">Return to</span>
        <br />
        <span class="text-gradient-cyan text-glow-pulse">Planet Nexus</span>
      </h1>
      <p class="hero-gaming-subtitle">
        Experience the legendary MMORPG adventure once more.
        Fast-paced combat, player housing, and endless exploration await.
      </p>
      <div class="hero-gaming-cta">
        <a href="/register" class="btn-gaming btn-gaming-primary btn-shimmer text-lg px-8 py-4">
          Play Free Now
        </a>
        <a href="#features" class="btn-gaming btn-gaming-magenta text-lg px-8 py-4">
          Learn More
        </a>
      </div>
      
<!-- Server status indicator -->
      <div class="mt-12 flex items-center justify-center gap-4 text-sm">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-[var(--gaming-green)] animate-pulse"></span>
          <span class="text-white/70">Server Online</span>
        </div>
        <span class="text-white/30">|</span>
        <span class="text-white/70">
          <span class="text-[var(--gaming-cyan)] font-bold">0</span> Players Online
        </span>
      </div>
    </div>
    
<!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <a href="#features" class="text-white/50 hover:text-[var(--gaming-cyan)] transition-colors">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"
          >
          </path>
        </svg>
      </a>
    </div>
  </section>
  
<!-- ============================================
       FEATURES SECTION
       ============================================ -->
