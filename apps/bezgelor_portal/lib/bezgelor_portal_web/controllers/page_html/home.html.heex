<!-- ============================================
       DOWNLOAD SECTION
       ============================================ -->
  <section class="section-gaming" style="background: var(--gaming-gradient-hero);">
    <div class="max-w-4xl mx-auto text-center">
      <div class="animate-on-scroll">
        <h2 class="section-title text-white mb-4">
          Ready to <span class="text-glow-orange">Play?</span>
        </h2>
        <div
          class="section-divider"
          style="background: linear-gradient(135deg, var(--gaming-orange), var(--gaming-magenta));"
        >
        </div>
        <p class="section-subtitle mb-8">
          Getting started is easy. Download the client, create an account, and jump into the action.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12 stagger-children">
        <!-- Step 1 -->
        <div class="card-gaming p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--gaming-cyan)]/20 flex items-center justify-center text-3xl font-bold text-[var(--gaming-cyan)]">
            1
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Download Client</h3>
          <p class="text-white/60 text-sm">
            Get the game client from our downloads page. ~30GB install size.
          </p>
        </div>
        
<!-- Step 2 -->
        <div class="card-gaming p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--gaming-magenta)]/20 flex items-center justify-center text-3xl font-bold text-[var(--gaming-magenta)]">
            2
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Create Account</h3>
          <p class="text-white/60 text-sm">
            Register for free on our website to get your game credentials.
          </p>
        </div>
        
<!-- Step 3 -->
        <div class="card-gaming p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--gaming-orange)]/20 flex items-center justify-center text-3xl font-bold text-[var(--gaming-orange)]">
            3
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Launch & Play</h3>
          <p class="text-white/60 text-sm">
            Configure the launcher, log in, and explore Nexus!
          </p>
        </div>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
        <a href="/download" class="btn-gaming btn-gaming-primary btn-shimmer text-lg px-10 py-4">
          Download Now
        </a>
        <a href="/download#setup" class="btn-gaming text-lg px-10 py-4">
          Setup Guide
        </a>
      </div>
      
<!-- System Requirements Preview -->
      <div class="mt-12 text-sm text-white/50 animate-on-scroll">
        <p>
          <strong class="text-white/70">Minimum:</strong>
          Windows 7+, 4GB RAM, DirectX 9.0c compatible GPU
        </p>
      </div>
    </div>
  </section>
  
<!-- ============================================
       FINAL CTA SECTION
       ============================================ -->
