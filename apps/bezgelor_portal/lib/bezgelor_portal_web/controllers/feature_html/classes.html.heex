<Layouts.gaming flash={@flash} current_account={@current_account}>
  <!-- Hero -->
  <section class="hero-gaming gaming-bg-hero" style="min-height: 50vh;">
    <div class="gaming-starfield"></div>
    <div class="gaming-mesh"></div>
    <div class="hero-gaming-content">
      <h1 class="hero-gaming-title text-4xl md:text-5xl">
        <span class="text-gradient-fire text-glow-pulse">Combat Classes</span>
      </h1>
      <p class="hero-gaming-subtitle">
        Six unique classes, each with distinct mechanics and multiple role options.
      </p>
    </div>
  </section>
  
<!-- Classes -->
  <section class="section-gaming" style="background: var(--gaming-bg-dark);">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 stagger-children">
        <!-- Warrior -->
        <div class="card-gaming overflow-hidden">
          <div
            class="p-6 border-b border-white/10"
            style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), transparent);"
